{
  "build": {
    "builder": "docker",
    "dockerfilePath": "backend/Dockerfile"
  },
  "services": [
    {
      "name": "frontend",
      "build": {
        "dockerfilePath": "frontend/Dockerfile"
      },
      "ports": [
        {
          "port": 3000,
          "protocol": "TCP"
        }
      ]
    }
  ],
  "env": {
    "DISABLE_COLLECTSTATIC": "1",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "*",
    "DATABASE_URL": {
      "description": "PostgreSQL connection URL",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Django secret key",
      "generator": "secret"
    }
  }
}