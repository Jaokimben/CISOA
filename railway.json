{
  "build": {
    "builder": "docker",
    "dockerfile": "backend/Dockerfile"
  },
  "services": [
    {
      "name": "frontend",
      "build": {
        "dockerfile": "frontend/Dockerfile"
      }
    }
  ],
  "env": {
    "DISABLE_COLLECTSTATIC": "1",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "*",
    "DATABASE_URL": {
      "description": "PostgreSQL connection URL",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Django secret key",
      "generator": "secret"
    }
  }
}