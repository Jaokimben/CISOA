{
  "build": {
    "builder": "nixpacks",
    "config": {
      "startCommand": "python manage.py migrate && gunicorn ciso_assistant.wsgi --workers 4 --timeout 120 --bind 0.0.0.0:$PORT"
    }
  },
  "deploy": {
    "startCommand": "python manage.py migrate && gunicorn ciso_assistant.wsgi --workers 4 --timeout 120 --bind 0.0.0.0:$PORT"
  },
  "env": {
    "DISABLE_COLLECTSTATIC": "1",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "*",
    "DATABASE_URL": {
      "description": "PostgreSQL connection URL",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Django secret key",
      "generator": "secret"
    }
  }
}